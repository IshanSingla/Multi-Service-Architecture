generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Order {
    id            String        @id @default(uuid())
    userId        String        @unique
    items         OrderItem[]
    coupon        String?
    orderDate     DateTime      @default(now())
    status        OrderStatus
    address       String
    deliveryDate  DateTime?
    totalPrice    Float
    finalPrice    Float
    paymentMethod PaymentMethod
    createdAt     DateTime      @default(now())
    updatedAt     DateTime      @updatedAt
}

model OrderItem {
    id           String   @id @default(uuid())
    orderId      String
    order        Order    @relation(fields: [orderId], references: [id])
    productId    String
    quantity     Int
    pricePerItem Float
    totalPrice   Float
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
}

enum OrderStatus {
    PENDING
    SHIPPED
    DELIVERED
    CANCELLED
}

enum PaymentMethod {
    CREDIT_CARD
    DEBIT_CARD
    PAYPAL
    CASH_ON_DELIVERY
    BANK_TRANSFER
}
